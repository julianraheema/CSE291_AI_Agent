{
  "id": "cli-image-blur-blend-ascii",
  "snapshot": "os",
  "instruction": "Download a black image from the internet, apply grayscale and blur effects, blend versions together, display ASCII output, and clean up temporary files.",
  "source": "user",

  "config": [
    {
      "type": "launch",
      "parameters": {
        "command": [
          "bash",
          "-c",
          "echo 'Opening terminal for image-processing workflow...'"
        ]
      }
    }
  ],

  "trajectory": "trajectories/cli-image-blur-blend-ascii",

  "related_apps": [
    "os",
    "terminal"
  ],

  "evaluator": {
    "func": "infeasible"
  },

  "human-ground-truth": {
    "single-action": [
      "`HOTKEY` 'Ctrl+Alt+T'",
      "`CLICK` terminal prompt",
      "`TYPING` sudo apt install imagemagick jp2a -y",
      "`PRESS` Enter",
      "`TYPING` curl -s -L -o sample.jpg https://upload.wikimedia.org/wikipedia/commons/9/99/Black_square.jpg",
      "`PRESS` Enter",
      "`TYPING` convert sample.jpg -resize 200x200 resized.jpg",
      "`PRESS` Enter",
      "`TYPING` convert resized.jpg -colorspace Gray gray.jpg",
      "`PRESS` Enter",
      "`TYPING` convert gray.jpg -blur 0x6 blur.jpg",
      "`PRESS` Enter",
      "`TYPING` convert gray.jpg blur.jpg -compose blend -define compose:args=50,50 -composite blend.jpg",
      "`PRESS` Enter",
      "`TYPING` jp2a blend.jpg --width=80 --colors",
      "`PRESS` Enter",
      "`TYPING` display blend.jpg",
      "`PRESS` Enter",
      "`TYPING` rm resized.jpg gray.jpg blur.jpg sample.jpg",
      "`PRESS` Enter",
      "`TYPING` rm blend.jpg",
      "`PRESS` Enter",
      "`DONE`"
    ],

    "grouped-action": [
